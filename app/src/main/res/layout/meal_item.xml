<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:layout_marginTop="3pt"
            android:background="@drawable/layer_card_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Morning"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorText"
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meal1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorMealText"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/mealItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meal2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorMealText"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/mealItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meal3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorMealText"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/mealItem4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meal4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorMealText"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/mealItem5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meal5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorMealText"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/mealItem6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meal6"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#@color/colorMealText"
                android:textSize="12pt" />

            <FrameLayout
                android:id="@+id/CHOICE_LAYOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/GOOD"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3pt"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/colorText" />

                <ImageButton
                    android:id="@+id/BAD"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3pt"
                    android:background="@drawable/btn"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="BAD" />

                <SeekBar
                    android:id="@+id/ChoiceBar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>